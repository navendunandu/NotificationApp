<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/basicNotificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Notification"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/inboxNotificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inbox Style Notification"
        android:layout_below="@id/basicNotificationButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/bigPictureNotificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Big Picture Style Notification"
        android:layout_below="@id/inboxNotificationButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
